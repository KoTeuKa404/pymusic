# youtube_gui.kv

<PNGIconButton@ButtonBehavior+Image>:
    size_hint: None, None
    size: dp(36), dp(36)   # близько до 26sp у MDIconButton
    allow_stretch: True
    keep_ratio: True

<YoutubeSearchScreen>:
    on_pre_enter: root.show_recent_videos(); root.ids.search_history_box.clear_widgets()
    name: "search"
    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(8)
        padding: dp(12), dp(8), dp(12), dp(4)

        MDTextField:
            id: search_input
            hint_text: "Enter song name"
            mode: "rectangle"
            multiline: False
            size_hint_y: None
            size_hint_x: 1
            height: dp(48)
            pos_hint: {"center_x": 0.5}
            font_size: "17sp"
            padding: [dp(8), dp(8), dp(8), dp(8)]

        MDBoxLayout:
            id: search_history_box
            size_hint_y: None
            height: self.minimum_height
            spacing: dp(6)
            padding: 0, dp(0), 0, dp(4)
            adaptive_height: True

        MDRaisedButton:
            text: "Search"
            size_hint_y: None
            height: dp(44)
            pos_hint: {"center_x": 0.5}
            on_release: root.perform_search()

        MDScrollView:
            MDGridLayout:
                id: results_grid
                cols: 1
                adaptive_height: True
                spacing: dp(10)
                padding: dp(10)

<AudioItem@BoxLayout>:
    size_hint_y: None
    height: dp(80)
    padding: dp(5)
    spacing: dp(10)
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    AsyncImage:
        id: thumbnail
        size_hint_x: None
        width: dp(120)
        allow_stretch: True
        keep_ratio: True

    BoxLayout:
        orientation: 'vertical'
        spacing: dp(5)

        Label:
            id: title
            text: root.title if hasattr(root, 'title') else ''
            font_size: '16sp'
            bold: True
            size_hint_y: None
            height: self.texture_size[1]

        Label:
            id: channel
            text: root.channel if hasattr(root, 'channel') else ''
            font_size: '14sp'
            color: 0.5, 0.5, 0.5, 1
            size_hint_y: None
            height: self.texture_size[1]

    Button:
        text: "♫"
        size_hint_x: None
        width: dp(50)
        on_press: root.play_audio()

<ProgressSlider@Slider>:
    cursor_image: ''          # не використовуємо стандартну картинку
    cursor_size: 0, 0         # ⬅️ ховаємо рідний курсор повністю
    background_width: 0
    background_normal: ''
    background_active: ''

    canvas.before:
        Color:
            rgba: 0, 0, 0, 0
        Rectangle:
            pos: self.pos
            size: self.size

    canvas.after:
        # (необовʼязково) лінія треку — прибери ці 4 рядки, якщо не треба
        Color:
            rgba: 1, 1, 1, .25
        Rectangle:
            pos: self.x, self.center_y - dp(1)
            size: self.width, dp(2)

        # наш кастомний круглий повзунок
        Color:
            rgba: 1, 1, 1, .5
        Ellipse:
            size: dp(14), dp(14)          # ← було dp(24), зробили менше
            pos: self.x + (self.value - self.min) / ((self.max - self.min) if (self.max - self.min) else 1) * (self.width - dp(14)), self.center_y - dp(7)

<AudioPlayerScreen>:
    name: 'audio'
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, None
            height: self.minimum_height
            spacing: dp(10)
            padding: dp(20)

            FloatLayout:
                size_hint_y: None
                height: dp(200)

                AsyncImage:
                    id: audio_thumbnail
                    pos: self.parent.pos
                    size_hint: 1, 1
                    allow_stretch: True
                    keep_ratio: True

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: 0.9, None
                    height: dp(30)
                    pos_hint: {'center_x': 0.5, 'y': 0.05}
                    spacing: dp(10)

                    Label:
                        id: current_time_label
                        text: '0:00'
                        size_hint_x: None
                        width: dp(50)
                        font_size: '14sp'
                        color: 1, 1, 1, 1

                    ProgressSlider:
                        id: progress_slider
                        min: 0
                        max: 1
                        value: 0
                        on_touch_up: if self.collide_point(*args[1].pos): root.seek(self.value)

                    Label:
                        id: total_time_label
                        text: '0:00'
                        size_hint_x: None
                        width: dp(50)
                        font_size: '14sp'
                        color: 1, 1, 1, 1

            Label:
                id: audio_title
                text: ''
                font_size: '20sp'
                halign: 'center'
                color: 0, 0, 0, 1
                size_hint_y: None
                height: self.texture_size[1] + dp(10)

            MDBoxLayout:
                size_hint_y: None
                height: dp(50)
                spacing: dp(8)
                padding: dp(4)
                pos_hint: {"center_x": 0.5}

                Widget:   # Лівий "розтягуючий" віджет
                    size_hint_x: 1

                MDIconButton:
                    id: play_pause_btn
                    icon: 'ico/icoplaybutton.png'
                    user_font_size: "30sp"
                    on_release: root.toggle_play_pause()

                PNGIconButton:
                    id: repeat_btn
                    source: "ico/icorepeat.png"
                    on_release: root.toggle_repeat()

#                MDIconButton:
#                    id: stop_btn
#                    icon: 'ico/icostopbuttons.png'
#                    user_font_size: "26sp"
#                    on_release: root.stop_audio()

                MDIconButton:
                    id: back_btn
                    icon: 'ico/icobackbutton.png'
                    user_font_size: "26sp"
                    on_release: root.go_back()

                Widget:   # Правий "розтягуючий" віджет
                    size_hint_x: 1
